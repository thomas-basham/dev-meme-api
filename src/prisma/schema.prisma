generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma" // REMOVE THIS LINE!
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id     Int     @id @default(autoincrement())
  username String @unique
  password String
  memes   Meme[]
  likes UserLikesMeme[]
}

model Meme {
  id     Int    @id @default(autoincrement())
  title  String
  url    String
  user   User   @relation(fields: [userId], references: [id])
  userId Int
  likes UserLikesMeme[]
}

model UserLikesMeme {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  meme   Meme @relation(fields: [memeId], references: [id])
  userId Int
  memeId Int

  @@unique([userId, memeId])
}
